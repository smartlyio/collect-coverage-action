{
  "name": "collect-coverage-action",
  "version": "3.4.8",
  "main": "dist/index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "lint": "eslint -c eslint.config.js .",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "clean": "rm -rf dist",
    "prebundle": "npm run clean",
    "bundle": "ncc build src/index.ts --source-map --license licenses.txt --target es2022",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "typecheck": "tsc --noEmit",
    "version": "npm run bundle && git add -f -- dist/index.js"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@friedemannsommer/lcov-parser": "^3.1.1",
    "fast-xml-parser": "^4.4.1",
    "istanbul-lib-coverage": "^3.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@vercel/ncc": "0.38.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.2.0",
    "undici": "^6.21.3"
  }
}
